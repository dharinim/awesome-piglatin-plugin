{
  "manifest_version": 2,

  "name": "Piglatin translator for page",
  "description": "This extension converts all your text to piglatin",
  "version": "1.0",

  "browser_action": {
    "default_icon": "happy.png"
  },

  "background": {
    "persistent": false,
    "scripts": ["chrome-background.js"]
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}